<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LogIn">
    <!-- LOGIN NA MALAKI TEXTVIEW!-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="552dp"
        android:text="@string/log_in"
        android:textColor="@color/black"
        android:textSize="30pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- USERNAME INPUT NA TEXTBOX !-->
    <EditText

        android:id="@+id/usernameInput"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginBottom="436dp"
        android:background="@drawable/roundedshapetext"
        android:ems="10"
        android:hint="@string/username"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--  PASSWORD INPUT NA TEXTBOX !-->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/roundedshapetext"
        android:ems="10"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- LOGIN NA BUTTON !-->
    <Button
        android:id="@+id/logInButton"
        android:layout_width="176dp"
        android:layout_height="57dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/log_in"
        android:textAllCaps="false"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- CREATE ACCOUNT NA LINK OR TEXT  !-->
    <TextView
        android:id="@+id/signUpClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="220dp"
        android:layout_marginRight="220dp"
        android:layout_marginBottom="112dp"
        android:text="@string/create_account"
        android:clickable="true"
        android:focusable="true"
        android:onClick="goToSignUp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- LINE NA PANGE DESIGN PARA MAHIWALAY SI CREATE AT FORGET  !-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="104dp"
        android:text="@string/line"
        android:textSize="15pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- FORGOT PASSWORD NA LINK OR TEXT  !-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="112dp"
        android:text="@string/forgot_password"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- IMAGE LANG TO NG NASA USERNAME NA TEXTBOX  !-->
    <ImageView
        android:id="@+id/usericon"
        android:contentDescription="@string/usernamepicture"
        android:layout_width="24dp"
        android:layout_height="27dp"
        android:layout_marginEnd="284dp"
        android:layout_marginRight="284dp"
        android:layout_marginBottom="448dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/user" />
    <!-- IMAGE LANG TO NG NASA PASSWORD NA TEXTBOX  !-->
    <ImageView
        android:id="@+id/passwordicon"
        android:contentDescription="@string/passwordpicture"
        android:layout_width="24dp"
        android:layout_height="27dp"
        android:layout_marginEnd="284dp"
        android:layout_marginRight="284dp"
        android:layout_marginBottom="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/padlock" />

</androidx.constraintlayout.widget.ConstraintLayout>