<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerification">

    <!-- EMAIL VERIFICATION NA TEXT!-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="552dp"
        android:text="@string/email_verification"
        android:textColor="@color/black"
        android:textSize="17pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- ENTER OTP NA TEXT!-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="532dp"
        android:text="@string/enter_otp"
        android:textColor="@color/black"
        android:textSize="6pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FIRST DIGIT NA TEXT!-->
    <!-- SECOND DIGIT NA TEXT!-->

    <EditText
        android:id="@+id/firstCode"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginEnd="292dp"
        android:layout_marginRight="292dp"
        android:layout_marginBottom="380dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/symbol"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/secondCode"
        android:layout_width="46dp"
        android:maxLength="1"
        android:layout_height="49dp"
        android:layout_marginEnd="228dp"
        android:layout_marginRight="228dp"
        android:layout_marginBottom="380dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/symbol"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- THIRD DIGIT NA TEXT!-->
    <EditText
        android:id="@+id/thirdCode"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:maxLength="1"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="380dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/symbol"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- FOURTH DIGIT NA TEXT!-->

    <EditText
        android:id="@+id/fourthCode"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginEnd="88dp"
        android:maxLength="1"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="380dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/symbol"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- RESEND OTP !-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:layout_marginBottom="316dp"
        android:text="@string/resend_otp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="176dp"
        android:layout_height="57dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/verify"
        android:textAllCaps="false"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>